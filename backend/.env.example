# ==========================================
# FLASK CONFIGURATION
# ==========================================
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
FLASK_ENV=development
FLASK_DEBUG=True

# ==========================================
# DATABASE - PostgreSQL
# ==========================================
DATABASE_URL=postgresql://usuario:senha@localhost:5432/carteira_digital

# Para produção (Azure):
# DATABASE_URL=postgresql://usuario:senha@servidor.postgres.database.azure.com:5432/carteira_digital?sslmode=require

# ==========================================
# OAUTH GOOGLE
# ==========================================
OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Para produção:
# OAUTH_REDIRECT_URI=http://www.enderecotemporario.com.br/api/auth/callback

# ==========================================
# SESSION
# ==========================================
SESSION_TYPE=filesystem
PERMANENT_SESSION_LIFETIME=3600

# ==========================================
# CORS
# ==========================================
FRONTEND_URL=http://localhost:5173

# Para produção:
# FRONTEND_URL=http://www.enderecotemporario.com.br

# ==========================================
# UPLOAD
# ==========================================
UPLOAD_FOLDER=uploads/comentarios
MAX_CONTENT_LENGTH=16777216

# ==========================================
# OPTIONAL - API Externa (se usar)
# ==========================================
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.externa.com
